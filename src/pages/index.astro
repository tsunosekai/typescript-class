---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const lessons = await getCollection('lessons');
const sortedLessons = lessons.sort((a, b) => a.data.lesson - b.data.lesson);
---

<BaseLayout title="目次">
  <div class="hero">
    <h1>TypeScript講座</h1>
    <p class="subtitle">完全初心者のためのプログラミング入門</p>
    <p class="description">
      プログラミングが初めての方でも安心！<br />
      VSCodeのインストールから始めて、最後にはReactでWebアプリを作れるようになります。
    </p>
  </div>

  <section class="lessons">
    <h2>カリキュラム</h2>
    <div class="lesson-grid">
      {sortedLessons.map((lesson) => (
        <a href={`/lessons/${lesson.slug}`} class="lesson-card">
          <span class="lesson-number">第{lesson.data.lesson}回</span>
          <span class="lesson-title">{lesson.data.title}</span>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    text-align: center;
    padding: 2rem 0 3rem;
    border-bottom: 1px solid #e2e8f0;
    margin-bottom: 2rem;
  }

  .hero h1 {
    font-size: 2.5rem;
    color: #1e40af;
    border-bottom: none;
    margin-top: 0;
  }

  .subtitle {
    font-size: 1.25rem;
    color: #64748b;
    margin-bottom: 1rem;
  }

  .description {
    color: #475569;
    line-height: 1.8;
  }

  .lessons h2 {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .lesson-grid {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .lesson-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background-color: #f8fafc;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s;
  }

  .lesson-card:hover {
    background-color: #eff6ff;
    border-color: #2563eb;
    transform: translateX(4px);
  }

  .lesson-number {
    background-color: #2563eb;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: bold;
    white-space: nowrap;
  }

  .lesson-title {
    font-weight: 500;
    color: #1e293b;
  }
</style>
